{
  "git": {
    "commitMessage": "chore: release v${version}"
  },
  "github": {
    "release": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "infile": "CHANGELOG.md",
      "header": "# Changelog",
      "preset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "section": "✨ Features"
          },
          {
            "type": "fix",
            "section": "🐛 Bug Fixes"
          },
          {
            "type": "chore",
            "section": "🚀 Chore",
            "hidden": true
          },
          {
            "type": "docs",
            "section": "📝 Documentation"
          },
          {
            "type": "style",
            "section": "💄 Style"
          },
          {
            "type": "refactor",
            "section": "♻️ Code Refactoring"
          },
          {
            "type": "perf",
            "section": "⚡ Performance Improvements"
          },
          {
            "type": "test",
            "section": "✅ Tests",
            "hidden": true
          },
          {
            "type": "revert",
            "section": "⏪ Revert | 回退",
            "hidden": true
          },
          {
            "type": "build",
            "section": "📦‍ Build System | 打包构建"
          },
          {
            "type": "ci",
            "section": "👷 Continuous Integration | CI 配置"
          }
        ]
      }
    }
  }
}
